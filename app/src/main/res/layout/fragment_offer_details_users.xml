<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".restaurant.restaurantSeeOffer.UI.OfferDetailsUsersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            app:layout_constraintBottom_toTopOf="@+id/editTextKey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewOfferDetailsCumprido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cumprido"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewOfferDetailsValidade"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textViewOfferDetailsValidade" />

            <TextView
                android:id="@+id/textViewOfferDetailsValidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shelf_life"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/textViewOfferDetailsPreço"
                app:layout_constraintEnd_toStartOf="@+id/textViewOfferDetailsCumprido"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewOfferDetailsPreço"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textSize="20sp"
                app:layout_constraintBottom_toTopOf="@+id/editTextKey"
                app:layout_constraintEnd_toEndOf="@+id/textViewOfferDetailsValidade"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/textViewOfferDetailsValidade"
                app:layout_constraintTop_toBottomOf="@+id/textViewOfferDetailsValidade" />

            <TextView
                android:id="@+id/textViewOfferDetailsRequesitado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/requested"
                android:textSize="20sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textViewOfferDetailsPreço"
                app:layout_constraintEnd_toEndOf="@+id/textViewOfferDetailsCumprido"
                app:layout_constraintStart_toStartOf="@+id/textViewOfferDetailsCumprido" />

            <Button
                android:id="@+id/buttonOfferDetailsUsersSeeProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:onClick="seeProductsOnClick"
                android:text="@string/see_products"
                app:layout_constraintBaseline_toBaselineOf="@+id/editTextKey"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.763"
                app:layout_constraintStart_toEndOf="@+id/textViewOfferDetailsPreço" />

            <EditText
                android:id="@+id/editTextKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="124dp"
                android:ems="10"
                android:inputType="number"
                android:visibility="invisible"
                app:layout_constraintEnd_toStartOf="@+id/buttonOfferDetailsUsersSeeProducts"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/buttonOfferDetailsUsersSeeProducts" />

            <Button
                android:id="@+id/buttonConfirmKey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="24dp"
                android:onClick="confirmKeyOnClick"
                android:text="@string/confirm_key"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/buttonOfferDetailsUsersSeeProducts"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextKey" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewOfferDetailsUsers"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </LinearLayout>
</FrameLayout>